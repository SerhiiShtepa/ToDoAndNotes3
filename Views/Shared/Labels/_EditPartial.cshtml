@model Label

@{
    Layout = "_ModalContentLayout";
}

@section ModalHeaderContent {
    <div class="modal-header-left">
        <div class="modal-title">Edit</div>
    </div>
    <div class="dropdown">
        <span class="material-symbols-outlined md-24 black btn js-dropdown-btn" data-dropdown-content-id="current-label-dropdown-content" data-target-id="@Model.LabelId">
            more_horiz
        </span>
        <div class="dropdown-content js-dropdown-content" id="current-label-dropdown-content">
            <form asp-controller="Labels" asp-action="DeletePartial" method="get" class="js-partial-form" data-target-modal-id="delete-label-modal">
                <input hidden type="text" name="returnUrl" value="@ViewData["ReturnUrl"]">
                <button class="btn" type="submit">Delete</button>
            </form>
        </div>
    </div>
}

<form asp-controller="Labels" asp-action="EditPartial" method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="LabelId" />
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="IsDeleted" />
    <div>
        <input asp-for="Title" placeholder="Project name" class="input-border w-100" />
        <span asp-validation-for="Title"></span>
    </div>
    <div class="btns-ok-cancel mt-3">
        <button class="btn btn-cancel js-close" type="button">Cancel</button>
        <button class="btn btn-ok js-submit-btn" type="button">Ok</button>
    </div>
</form>