@model ChangePasswordViewModel

@{
    Layout = "_ModalContentLayout";
    string updateUrl = ViewData["ReturnUrl"] + "?isGetPartial=true";
    string updateTargetId = "main";
}

@section ModalHeaderContent {
    <div class="modal-header-left">
        <div class="modal-title">Change password</div>
    </div>
}


<form method="post" asp-controller="Manage" asp-action="ChangePasswordPartial" class="js-post-modal-with-partial-update-ajax"
      data-target-modal-id="change-password-modal" data-update-partial-id="@updateTargetId" data-update-action="@updateUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <input asp-for="OldPassword" placeholder="@Html.DisplayNameFor(m => m.OldPassword)" class="input-border w-100" />
        <span asp-validation-for="OldPassword"></span>
    </div>
    <div class="mt-1">
        <input asp-for="NewPassword" placeholder="@Html.DisplayNameFor(m => m.NewPassword)" class="input-border w-100" />
        <span asp-validation-for="NewPassword"></span>
    </div>
    <div class="mt-1">
        <input asp-for="ConfirmPassword" placeholder="@Html.DisplayNameFor(m => m.ConfirmPassword)" class="input-border w-100" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="btns-ok-cancel mt-3">
        <button class="btn btn-cancel js-close" type="button">Cancel</button>
        <button class="btn btn-ok" type="submit">Ok</button>
    </div>
</form>