@model ChangeNameViewModel

@{
    Layout = "_ModalContentLayout";
    string updateUrl = ViewData["ReturnUrl"] + "?isGetPartial=true";
    string updateTargetId = "main";
}

@section ModalHeaderContent {
    <div class="modal-header-left">
        <div class="modal-title">Change name</div>
    </div>
}

<form method="post" asp-controller="Manage" asp-action="ChangeNamePartial" class="js-post-modal-with-partial-update-ajax"
      data-target-modal-id="change-name-modal" data-update-partial-id="@updateTargetId" data-update-action="@updateUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="OldName"/>
    <div>
        <input asp-for="NewName" value="@Model.OldName" placeholder="Name" class="input-border w-100" />
        <span asp-validation-for="NewName"></span>
    </div>
    <div class="btns-ok-cancel mt-3">
        <button class="btn btn-cancel js-close" type="button">Cancel</button>
        <button class="btn btn-ok" type="submit">Ok</button>
    </div>
</form>