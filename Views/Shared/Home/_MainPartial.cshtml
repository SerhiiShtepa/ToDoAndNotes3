                                <input hidden type="text" name="returnUrl" value="@ViewData["ReturnUrl"]">
                                <button class="btn btn-clean" type="submit" onclick="event.stopPropagation()">
                                    @if (task.IsCompleted)
                                    {
                                        <span class="material-symbols-outlined md-24">
                                            radio_button_checked
                                        </span>
                                    }
                                    else
                                    {
