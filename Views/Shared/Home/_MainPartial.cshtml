                                        }
                                        @if (task?.DueTime != null)
                                        {
                                            <span>&nbsp</span>
                                            <span class="material-symbols-outlined md-20">
                                                access_time
                                            </span>
                                            <div class="nowrap-ellipsis">
                                                @task.DueTime
                                            </div>
                                        }
                                    </div>
                                    <div class="label-tools">
                                        @foreach (var taskLabel in task?.TaskLabels?.ToList())
                                        {
                                            if (taskLabel.Equals(task?.TaskLabels.First()))
                                            {
                                                <span class="material-symbols-outlined md-20">
                                                    label
