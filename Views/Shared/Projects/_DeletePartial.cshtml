@model Project

@{
    Layout = "_ModalContentLayout";
}

@section ModalHeaderContent {
    <div class="modal-header-left">
        <div class="modal-title">Delete</div>
    </div>
}

<div>Are you sure you want to delete <strong>"@Model.Title"</strong> project?</div>
<form method="post" asp-controller="Projects" asp-action="Delete" asp-route-id="@Model.ProjectId"
      asp-route-returnUrl="@ViewData["ReturnUrl"]" class="js-post-partial-form" data-target-modal-id="delete-project-modal">
    @Html.AntiForgeryToken()
    <div class="btns-ok-cancel mt-3">
        <button class="btn btn-cancel js-close" type="button">Cancel</button>
        <button class="btn btn-ok" type="submit">Ok</button>
    </div>
</form>