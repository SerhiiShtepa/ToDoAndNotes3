@model Project

@{
    Layout = "_ModalContentLayout";

    string updateUrl = ViewData["ReturnUrl"] + "?isGetPartial=true";
    string updateTargetId = "main";
}

@section ModalHeaderContent {
    <div class="modal-header-left">
        <div class="modal-title">Delete</div>
    </div>
}

<div>Are you sure you want to delete <strong>"@Model.Title"</strong> project?</div>
<form method="post" asp-controller="Projects" asp-action="Delete" asp-route-id="@Model.ProjectId" asp-route-returnUrl="@ViewData["ReturnUrl"]"
      class="js-post-modal-with-partial-update-ajax" data-target-modal-id="delete-project-modal" data-update-partial-id="@updateTargetId" data-update-action="@updateUrl">
    @Html.AntiForgeryToken()
    <div class="btns-ok-cancel mt-3">
        <button class="btn btn-cancel js-close" type="button">Cancel</button>
        <button class="btn btn-ok" type="submit">Ok</button>
    </div>
</form>