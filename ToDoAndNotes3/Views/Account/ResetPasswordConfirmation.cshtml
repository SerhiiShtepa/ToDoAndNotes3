@{
    ViewData["Title"] = "Reset password confirmation";
}

<div class="container">
    <div class="auth-left">
        <p class="auth-title">Done!</p>
        <div class="auth-description mt-5">
            <span class="material-symbols-outlined md-20">
                check_circle
            </span>
            <p>Success! Your password has been updated.</p>
        </div>
        <a asp-controller="Account" asp-action="Login" class="btn-default mt-2">Return to login</a>
    </div>
    <div class="image-container">
        <img src="https://image.lexica.art/full_jpg/5532ad7c-5c5a-4cc0-9687-804546e78861" alt=""
             class="tdn-image">
    </div>
</div>