@{
    Layout = null;
    ViewData["Title"] = "Main";
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - TDN</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="~/styles/shared/general.css">
    <link rel="stylesheet" href="~/styles/pages/main.css">
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>

<body>
    <header>
        <section class="header-left">
            <button id="burger-menu-toggle" class="btn btn-icon">
                <span class="material-symbols-outlined md-32 white">
                    menu
                </span>
            </button>
            <button asp-controller="Home" asp-action="Main" class="btn btn-icon">
                <span class="material-symbols-outlined md-32 white">
                    home
                </span>
            </button>
            <form class="search-form">
                <span class="material-symbols-outlined md-32 white search-icon">
                    search
                </span>
                <input type="search" />
            </form>
        </section>
        <section class="header-right">
            <div class="dropdown">
                <span class="material-symbols-outlined md-32 white btn dropdown-btn-ellipsis">
                    account_circle
                </span>
                <div class="dropdown-content">
                    <a href="#Account">Account</a>
                    <a href="#RecycleBin">Recycle Bin</a>
                    <form asp-controller="Account" asp-action="LogOff" method="post">
                        <button type="submit" class="btn">Log out</button>
                    </form>
                </div>
            </div>
        </section>
    </header>
    <div class="container">
        <aside class="sidebar" id="sidebar">
            <nav class="days">
                <ul>
                    <li class="nav-link">
                        <a>
                            <span class="material-symbols-outlined md-24 black">
                                calendar_today
                            </span>
                            Today
                        </a>
                    </li>
                    <li class="nav-link">
                        <a>
                            <span class="material-symbols-outlined md-24 black">
                                calendar_month
                            </span>
                            Upcoming
                        </a>
                    </li>
                    <li class="nav-link">
                        <a>
                            <span class="material-symbols-outlined md-24 black">
                                label
                            </span>
                            Labels
                        </a>
                    </li>
                </ul>
            </nav>
            <nav class="projects">
                <div class="projects-preview">
                    <p>Projects</p>
                    <button asp-controller="Home" asp-action="Main" class="btn btn-plus">
                        <span class="material-symbols-outlined md-24">
                            add
                        </span>
                    </button>
                </div>
                <ul class="projects-data js-projects-test">
                    @* test generation in js *@
                    <li class="nav-link dropdown">
                        <a>
                            <div class="nowrap-ellipsis">Project: ${dropdownContentElem.id}</div>
                            <span class="material-symbols-outlined md-24 black dropdown-btn-ellipsis" id="1">
                                more_horiz
                            </span>
                        </a>
                        <div class="dropdown-content" id="1">
                            <a href="#Edit">Edit</a>
                            <a href="#Remove">Remove</a>
                        </div>
                    </li>
                </ul>
            </nav>
        </aside>
        <main id="main">
            <div class="main-header">
                <div class="main-header-left">
                    <div class="main-header-title">Today</div>
                    <div class="main-header-buttons">
                        <button asp-controller="Account" asp-action="ForgotPassword" class="btn btn-action">
                            <span class="material-symbols-outlined md-30">
                                add_task
                            </span>
                        </button>
                        <button asp-controller="Home" asp-action="Main" class="btn btn-action">
                            <span class="material-symbols-outlined md-30">
                                note_add
                            </span>
                        </button>
                        <button asp-controller="Home" asp-action="Main" class="btn btn-action">
                            <span class="material-symbols-outlined md-30">
                                filter_alt
                            </span>
                        </button>
                    </div>
                </div>
                <div class="main-header-right">

                </div>
            </div>
            <div class="main-container">
                <ul class="tasks js-tasks-test">
                    @* test generation in js *@
                    <li class="task nav-link dropdown">
                        <a>
                            <span class="material-symbols-outlined md-24 is-done-btn">
                                radio_button_unchecked
                            </span>
                            <div class="nowrap-ellipsis">
                                <div class="nowrap-ellipsis">Project: ${dropdownContentElem.id}ddddddddddddddd</div>
                                <div class="tools-row">
                                    <div class="d-flex">
                                        <span class="material-symbols-outlined md-20 black dropdown-btn-ellipsis">
                                            date_range
                                        </span>6 nov
                                    </div>
                                    <div class="d-flex">
                                        <span class="material-symbols-outlined md-20 black dropdown-btn-ellipsis">
                                            label
                                        </span>Dev
                                    </div>
                                </div>                           
                            </div>                           
                            <span class="material-symbols-outlined md-24 black dropdown-btn-ellipsis">
                                more_horiz
                            </span>
                        </a>
                        <div class="dropdown-content">
                            <a href="#Edit">Edit</a>
                            <a href="#Remove">Remove</a>
                        </div>
                    </li>
                    <li class="task nav-link dropdown">
                        <a>
                            <span class="material-symbols-outlined md-24 is-done-btn">
                                radio_button_checked
                            </span>
                            <div class="nowrap-ellipsis">
                                <div class="nowrap-ellipsis line-through">Project: ${dropdownContentElem.id}ddddddddddddddd</div>
                                <div class="tools-row">
                                    <div class="d-flex">
                                        <span class="material-symbols-outlined md-20 black dropdown-btn-ellipsis">
                                            date_range
                                        </span>
                                        6 nov
                                    </div>
                                    <div class="d-flex">
                                        <span class="material-symbols-outlined md-20 black dropdown-btn-ellipsis">
                                            label
                                        </span>
                                        Dev
                                    </div>
                                </div>
                            </div>
                            <span class="material-symbols-outlined md-24 black dropdown-btn-ellipsis">
                                more_horiz
                            </span>
                        </a>
                        <div class="dropdown-content">
                            <a href="#Edit">Edit</a>
                            <a href="#Remove">Remove</a>
                        </div>
                    </li>
                </ul>
                <section class="notes js-notes-test">
                    <div class="task">Hello note!!</div>
                    <div class="note">Hello note</div>
                    <div class="note">Hello note</div>
                </section>
                <section class="tasks-with-notes js-tasks-with-notes-test">
                    <div class="task">Hello task</div>
                    <div class="note">Hello note</div>
                </section>
            </div>
        </main>
    </div>
    <script src="~/scripts/main.js" type="text/javascript"></script>
</body>

</html>