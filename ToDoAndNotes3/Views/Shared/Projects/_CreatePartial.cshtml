@model ToDoAndNotes3.Models.Project

@{
    Layout = "_ModalContentLayout";

}

@section ModalHeaderContent {
    <div class="modal-header-left">
        <div class="modal-title">Create</div>
    </div>
}

<form id="create-project-form">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="IsDeleted" />
    <input type="hidden" asp-for="CreatedDate" />
    <input type="hidden" asp-for="UserId" />
    <div>
        <input asp-for="Title" placeholder="Project name" />
        <span asp-validation-for="Title"></span>
    </div>
    <div class="btns-ok-cancel mt-3">
        <button class="btn btn-cancel js-close" type="button">Cancel</button>
        <button class="btn btn-ok js-create-submit-btn" type="button" data-target-id="create-project-form">Ok</button>
    </div>
</form>